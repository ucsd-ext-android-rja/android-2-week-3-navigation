<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_instagram_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ucsdextandroid2.screennavigation.instagram.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.ucsdextandroid2.screennavigation.instagram.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.ucsdextandroid2.screennavigation.instagram.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />
    </fragment>
    <fragment
        android:id="@+id/singlePostFragment"
        android:name="com.ucsdextandroid2.screennavigation.instagram.SinglePostFragment"
        android:label="SinglePostFragment" >
        <argument
            android:name="username"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/notificationsPagerFragment"
        android:name="com.ucsdextandroid2.screennavigation.instagram.NotificationsPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager">
        <action
            android:id="@+id/action_notificationsPagerFragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />
    </fragment>

</navigation>